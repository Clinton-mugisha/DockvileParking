h1.display-4.font-weight-bold Coaster Table
a.btn.btn-success(href="coaster" style='position: absolute; top: 185px; right: 120px') +Add Customer
h2 Total amount: #{custotal}
h2 Total Number : #{coastercount}
div#table-container
  table.table.table-dark.table-striped.table-hover
    thead.table-dark
      tr
        th(scope='col') FirstName
        th(scope='col') Lastname
        th(scope='col') Gender 
        th(scope='col') NumberPlate
        th(scope='col') Color
        th(scope='col') Arrival time
        th(scope='col') Departure time 
        th(scope='col') Model 
        th(scope='col') Phone 
        th(scope='col') Date 
        th(scope='col') Period 
        th(scope='col') Amount 
        th(scope='col') NIN
        th(scope='col') Number
        th(scope='col') TireClinic 
        th(scope='col') Battery
        th(scope='col') Delete
        th(scope='col') Edit
    
    tbody
    if coasters.length 
      each coaster in coasters
        tr
          th #{coaster.firstname}
          td #{coaster.lastname}
          td #{coaster.gender}
          td #{coaster.numberplate}
          td #{coaster.color}
          td #{coaster.arrivaltime}
          td #{coaster.departuretime}
          td #{coaster.model}
          td #{coaster.phone}
          td #{coaster.date}
          td #{coaster.period}
          td #{coaster.amount}
          td #{coaster.nin}
          td #{coaster.number}
          td #{coaster.tireclinic}
          td #{coaster.battery}
          td 
            form(action='/api/coaster/delete' method='POST')
              input(type="hidden" name='id' value=coaster._id)
              button.btn.btn-danger(type="submit" onclick="confirmDelete(event)") Delete
          td  
            a.btn.btn-warning(href="/api/coaster/edit/"+coaster._id) Edit
    else 
      p there are no customers in the database     
