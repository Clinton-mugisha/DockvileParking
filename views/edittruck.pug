// car form
div(style='background-color: rgb(240, 248, 255, 0.6); position:absolute; height: 900px; width: 752px;opacity:80%;top: 60%; left: 50%;transform: translate(-50%, -50%);')
  div(style='position: relative; width: 703px; height: 674px; left: 20px; top: 20px;')
    form(name='registration' method='POST' action='/api/truck/edit?id='+truck._id onsubmit=' return validate(event);')
      .row.g-3
        .col(style='text-align: center;')
          h1 Truck Form
      .row.g-3
        .col
          input.form-control(type='text' placeholder='First name' aria-label='First name' name='firstname' value=truck.firstname)
          span#firstname-error
        .col
          input.form-control(type='text' placeholder='Last name' aria-label='Last name' name='lastname' value=truck.lastname)
          span#lastname-error
        .col
          .col-auto
            label.visually-hidden(for='autoSizingSelect') Gender
            select#autoSizingSelect.form-select(itemid='gender' name='gender' value=truck.gender)
              option(selected='') Gender
              option(value='Male' name='gender' selected=truck.gender === 'Male') Male
              option(value='Female' name='gender' selected=truck.gender === 'Female') Female
            span#gender-error
      br
      .row.g-3
        .col
          input#number-plate.form-control(type='text' placeholder='Number plate' aria-label='Number plate' name='numberplate' value=truck.numberplate)
          span#number-plate-error
        .col
          input#color.form-control(type='text' placeholder='Color' aria-label='Color' name='color' value=truck.color)
          span#color-error
      br
      .row.g-3
        .col
          label(for='') Arrival time
          input#arrival-time.form-control(type='time' placeholder='Arrival time' aria-label='Arrival time' name='arrivaletime' value=truck.arrivaltime)
          span#arrival-time-error
        .col
          label(for='') Depature time
          input#depature-time.form-control(type='time' placeholder='Depature Time' aria-label='Depature time' name='departuretime' value=truck.departuretime)
          span#departure-time-error
      br
      .row.g-3
        .col
          input#car-type.form-control(type='text' placeholder='Model' aria-label='Model' name='model' value=truck.model)
          span#car-type-error
        .col
          input#date.form-control(type='date' placeholder='Date' aria-label='Date' name='date' value=truck.date)
          span#date-error
        .col
          input.form-control(type='text' placeholder='contact' aria-label='contact' name='phone' value=truck.phone)
          span#phone-error
      br
      .row.g-3
        .col
          .col-auto
            label.visually-hidden(for='autoSizingSelect') Period
            select#autoSizingSelect.form-select(name='period' value=truck.period)
              option(selected='') Period
              option(value='Day' selected=truck.period === 'Day') Day
              option(value='Night' selected=truck.period === 'Night') Night
              option(value='Less than 3 hours' selected=truck.period === 'Less than 3 hours') Less than 3 hours
        .col
          .col-auto
            label.visually-hidden(for='autoSizingSelect')  Amount
            select#autoSizingSelect.form-select(name='amount' value=truck.amount)
              option(selected='') Amount
              option(value='2000' selected=truck.amount === '2000') 2000
              option(value='3000'  selected=truck.amount === '3000') 3000
              option(value='5000' selected=truck.amount === '5000') 5000
        .col
          input.form-control(type='text' placeholder='NIN' aria-label='NIN' name='nin' value=truck.nin)
          span#nin-error
      br
      .row.g-3
        .col
          input.form-control(type='number' placeholder='Identifier' aria-label='Identifier' min='1' max='200' name='number' value=truck.number)
          span#number-error
      br
      .col(style='text-align: center;')
        h1 Other Services
        br
      .row.g-3
        .col
          h3 Car tyre clinic
          .form-check
            input#flexCheckDefault.form-check-input(type='checkbox' value='Tire Pressure' name='tireclinic[]' checked=truck.tireclinic.includes('Tire Pressure'))
            label.form-check-label(for='flexCheckDefault')
              | tire pressure
          .form-check
            input#flexCheckDefault.form-check-input(type='checkbox' value='Valves' name='tireclinic[]' checked=truck.tireclinic.includes('Valves'))
            label.form-check-label(for='flexCheckDefault')
              | Valves
          .form-check
            input#flexCheckDefault.form-check-input(type='checkbox' value='Puncture Fixing' name='tireclinic[]' checked=truck.tireclinic.includes('puncture fixing'))
            label.form-check-label(for='flexCheckDefault')
              | puncture fixing
        .col
          h3 Battery Section
          input#size.form-control(type='text' placeholder='Size' aria-label='Model' name='battery' value=truck.battery)
          span#size-error
      br
      button.btn.btn-primary(type='submit') Submit
